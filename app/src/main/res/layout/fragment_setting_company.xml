<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="회사 이름"
            android:inputType="text"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editCompanyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="회사 소개"
            android:inputType="textMultiLine"
            android:padding="12dp" />

        <EditText
            android:id="@+id/editCompanyAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="회사 주소"
            android:inputType="text"
            android:padding="12dp" />

        <ImageView
            android:id="@+id/imageLargeCompany"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonUploadLargeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="큰 이미지 업로드" />

        <ImageView
            android:id="@+id/imageIconCompany"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/buttonUploadIconImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이콘 이미지 업로드" />

        <CheckBox
            android:id="@+id/checkboxRecruiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 모집 중" />

        <Button
            android:id="@+id/buttonRegisterCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회사 등록" />
    </LinearLayout>
</ScrollView>
